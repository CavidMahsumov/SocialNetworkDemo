@model SocialProject.WebUI.Models.SocialAccountViewModel


@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Social";
}


<div class="main-content bg-lightblue theme-dark-bg right-chat-active">

    <div class="middle-sidebar-bottom">
        <div class="middle-sidebar-left">
            <div class="middle-wrap">
                <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                    <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                        <a asp-controller="Home" asp-action="Settings" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                        <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Social Network</h4>
                    </div>
                    <div class="card-body p-lg-5 p-4 w-100 border-0">
                        <form asp-controller="Home" asp-action="Social" method="post">
                            <div class="row">

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Facebook</label>
                                        <input asp-for="Facebook" type="text"  class="form-control" placeholder="Facebook">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Twitter</label>
                                        <input asp-for="Twitter" type="text" class="form-control" placeholder="Twitter">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Linkedin</label>
                                        <input asp-for="Linkedin" type="text"  class="form-control" placeholder="Linkedin">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Instagram</label>
                                        <input asp-for="Instagram" type="text"  class="form-control" placeholder="Instagram">
                                    </div>
                                </div>



                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Github</label>
                                        <input asp-for="Github" type="text"  class="form-control" placeholder="Github">
                                    </div>
                                </div>



                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Google</label>
                                        <input asp-for="Google" type="text"  class="form-control" placeholder="Google">
                                    </div>
                                </div>

                                <div class="col-lg-12 mb-0 mt-2">
                                    <input  type="submit" value="Save" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


