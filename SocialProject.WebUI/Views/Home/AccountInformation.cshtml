@model SocialProject.WebUI.Models.AccountInfoViewModel

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Account Info";
}


<div class="main-content bg-lightblue theme-dark-bg right-chat-active">

    <div class="middle-sidebar-bottom">
        <div class="middle-sidebar-left">
            <div class="middle-wrap">
                <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                    <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                        <a asp-controller="Home" asp-action="Settings" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                        <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Account Details</h4>
                    </div>
                    <div class="card-body p-lg-5 p-4 w-100 border-0 ">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 text-center">
                                <figure class="avatar ms-auto me-auto mb-0 mt-2 w100">
                                    @if (@Model.ImagePath == null)
                                    {
                                        <img src="~/images/Profile_Icon1.png" alt="image" class="shadow-sm rounded-3 w-100">
                                    }
                                    else
                                    {
                                        <img src="~/images/@Model.ImagePath" alt="image" class="shadow-sm rounded-3 w-100">
                                    }
                                </figure>
                                <h2 class="fw-700 font-sm text-grey-900 mt-3">@Model.Lastname  @Model.Firstname </h2>
                                <h4 class="text-grey-500 fw-500 mb-3 font-xsss mb-4">@Model.City</h4>
                                <!-- <a href="#" class="p-3 alert-primary text-primary font-xsss fw-500 mt-2 rounded-3">Upload New Photo</a> -->
                            </div>
                        </div>

                        <form asp-controller="Home" asp-action="AccountInformation" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">First Name</label>
                                        <input asp-for="Firstname" type="text" class="form-control" placeholder="Firstname">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Last Name</label>
                                        <input asp-for="Lastname" type="text" class="form-control" placeholder="Lastname">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Email</label>
                                        <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Phone</label>
                                        <input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Country</label>
                                        <input asp-for="Country" type="text" class="form-control" placeholder="Country">
                                    </div>
                                </div>

                                <div class="col-lg-12 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Address</label>
                                        <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                                    </div>
                                </div>

                                <div class="col-lg-12 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">About</label>
                                        <input asp-for="About" type="text" class="form-control" placeholder="About">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Twon / City</label>
                                        <input asp-for="City" type="text" class="form-control" placeholder="City">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Postcode</label>
                                        <input asp-for="PostCode" type="text" class="form-control" placeholder="PostCode">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <label class="mont-font fw-600 font-xsss">Upload Your Profile</label>
                                    <input class="imginput" type="file" asp-for="@Model.File">
                                </div>

                                <div class="col-lg-12">
                                    <input value="Save" type="submit" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block" />
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- <div class="card w-100 border-0 p-2"></div> -->
            </div>
        </div>

    </div>
</div>


