@model SocialNetwork.WebUI.Models.PostViewModel


@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Password";
}


<div class="main-content bg-lightblue theme-dark-bg right-chat-active">
    <div class="middle-sidebar-bottom">
        <div class="middle-sidebar-left">
            <div class="middle-wrap">
                <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                    <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                        <a asp-controller="Home" asp-action="Settings" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                        <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Change Password</h4>
                    </div>
                    <div class="card-body p-lg-5 p-4 w-100 border-0">
                        <form asp-controller="Account" asp-action="Password" method="post" >
                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <div class="form-gorup">
                                        <label class="mont-font fw-600 font-xssss">Current Password</label>
                                        <input asp-for="CurrentPassword" type="password"  class="form-control" placeholder="Password" >
                                        <span asp-validation-for="CurrentPassword"></span>
                                    </div>
                                </div>

                                <div class="col-lg-12 mb-3">
                                    <div class="form-gorup">
                                        <label class="mont-font fw-600 font-xssss">Change Password</label>
                                        <input asp-for="NewPassword" type="password"  class="form-control" placeholder="Password">
                                        <span asp-validation-for="NewPassword"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <div class="form-gorup">
                                        <label class="mont-font fw-600 font-xssss">Confirm Change Password</label>
                                        <input asp-for="ConfirmNewPassword" type="password"  class="form-control" placeholder="Password">
                                        <span asp-validation-for="ConfirmNewPassword"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 mb-0">
                                    <input value="Save" type="submit" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block"/>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
                <!-- <div class="card w-100 border-0 p-2"></div> -->
            </div>
        </div>

    </div>
</div>

